{
  "name": "@static-pages/nodefs-backend",
  "version": "1.0.0",
  "description": "NodeJS Filesystem Backend for Static Pages",
  "type": "module",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    }
  },
  "scripts": {
    "prepack": "npm run test",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "watch:esm": "tsc --watch",
    "build:cjs": "tsc --project tsconfig.cjs.json && echo { \"type\": \"commonjs\" }>cjs/package.json",
    "watch:cjs": "npm run build:cjs && tsc --project tsconfig.cjs.json --watch",
    "test": "npm run build && cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:quick": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "clean": "rimraf esm cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staticpagesjs/file-proivider.git"
  },
  "keywords": [
    "static-pages",
    "provider",
    "reader",
    "writer"
  ],
  "author": "László BULIK",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/staticpagesjs/fileio/issues"
  },
  "homepage": "https://staticpagesjs.github.io/",
  "dependencies": {
    "fast-glob": "^3.2.11",
    "micromatch": "^4.0.4"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^18.11.5",
    "cross-env": "^7.0.3",
    "jest": "^29.3.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  }
}
